{
  "name": "dev-chronicle",
  "displayName": "DevChronicle",
  "description": "Track your code journey with smart AI-powered commit messages",
  "version": "0.0.2",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "little-prince",
  "license": "ISC",
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "huggingface",
    "automation",
    "productivity",
    "workflow"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chronicle.setHuggingFaceKey",
        "title": "Set Groq API Key",
        "category": "DevChronicle"
      },
      {
        "command": "chronicle.testAPI",
        "title": "üß™ Test API Key",
        "category": "DevChronicle"
      },
      {
        "command": "chronicle.commitNow",
        "title": "üìö Commit Now",
        "category": "DevChronicle"
      },
      {
        "command": "chronicle.openSettings",
        "title": "‚öôÔ∏è Open Settings",
        "category": "DevChronicle"
      },
      {
        "command": "chronicle.pauseAutoCommit",
        "title": "‚è∏Ô∏è Pause Auto-Commit",
        "category": "DevChronicle"
      },
      {
        "command": "chronicle.resumeAutoCommit",
        "title": "‚ñ∂Ô∏è Resume Auto-Commit",
        "category": "DevChronicle"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "chronicle.setHuggingFaceKey"
        },
        {
          "command": "chronicle.commitNow",
          "when": "workspaceFolderCount != 0"
        },
        {
          "command": "chronicle.openSettings"
        },
        {
          "command": "chronicle.pauseAutoCommit"
        },
        {
          "command": "chronicle.resumeAutoCommit"
        }
      ]
    },
    "configuration": {
      "title": "DevChronicle",
      "properties": {
        "chronicle.useAICommitMessages": {
          "type": "boolean",
          "default": true,
          "description": "Use AI to generate commit messages (requires free Groq API key)",
          "order": 0
        },
        "chronicle.autoCommit": {
          "type": "boolean",
          "default": true,
          "description": "Automatically commit changes on file save/switch",
          "order": 1
        },
        "chronicle.autoPush": {
          "type": "boolean",
          "default": true,
          "description": "Automatically push changes after committing",
          "order": 2
        },
        "chronicle.idleMinutes": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 30,
          "description": "Idle time (in minutes) before auto-commit triggers",
          "order": 3
        },
        "chronicle.fileExtensions": {
          "type": "array",
          "default": [
            ".js",
            ".ts",
            ".jsx",
            ".tsx",
            ".css",
            ".scss",
            ".html"
          ],
          "description": "File types that trigger auto-commit",
          "order": 4
        },
        "chronicle.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for commits and reminders",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewTheCoder1218/chronicle.git"
  },
  "bugs": {
    "url": "https://github.com/MatthewTheCoder1218/chronicle/issues"
  },
  "homepage": "https://github.com/MatthewTheCoder1218/chronicle#readme",
  "author": "Little Prince",
  "dependencies": {}
}